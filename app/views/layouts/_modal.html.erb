<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <div style="width: 100%; text-align: right;">
      <span id="close">close</span>
    </div>
    <form class="form-horizontal">
    <article class="article-list review-card">
      <div class="inner">
        <div style="width: 300px; float: left">
          <figure>
            <a href="#">
              <!-- <img src="images/news/chickenfry.jpg" alt="Sample Article"> -->
              <%= image_tag("news/chickenfry.jpg")%>
            </a>
          </figure>
        </div>
        <div class="details">
          <div class="form-group" style="height: 40px">
            <label class="control-label col-md-2 col-sm-2" for="Store-name">Store: </label>
            <div class="col-sm-10">
              <input class="form-control" id="store" placeholder="Enter store name" name="store">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-md-2 col-sm-2" for="Food">Food: </label>
            <div class="col-sm-10">
              <input class="form-control" id="food" placeholder="Enter food name" name="food">
            </div>
        </div>
      </div>
      <div class="pb-cmnt-container comment-container">
        <div class="detailBox">
          <div class="actionBox">
              <div class="form-inline">
                  <div class="form-group test">
                      <textarea style="margin-left: 10px" class="form-control comment-text-box" type="text" placeholder="Content"></textarea>
                  </div>
                  <input type="submit" value="Submit" style="margin-top: 20px;">
              </div>
          </div>
      </div>
    </article>
    </form>
  </div>

</div>
