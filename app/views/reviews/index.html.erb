<section class="home review-list">
  <div class="container">
    <div class="row">
      <!-- Left site -->
      <div class="col-xs-6 col-md-2 sidebar" id="sidebar"></div>
      <div class="col-md-8 col-sm-12 col-xs-12">
        <div class="row">
          <% @reviews.each do |review| %>
            <article class="col-md-12 article-list review-card">
            <div class="inner">
              <div style="width: 300px; float: left">
                <figure>
                  <a href="/reviews/show/<%= review.id %>">
                    <img src="images/news/chickenfry.jpg" alt="Sample Article">
                  </a>
                </figure>
              </div>
              <div class="details">
                <div class="detail">
                  <div class="category">
                    <a href="#">
                      <%= review.user.name %>
                    </a>
                  </div>
                  <div class="time">
                    <%= review.created_at %>
                  </div>
                </div>
                <h1>
                  <a href="reviews/show/<%= review.id %>"><%= review.title %></a>
                </h1>
                <div class="store-div">
                  <a class="store-name" href="#"><%= review.store_name %></a>
                </div>
                <div>
                  <p><%= review.store_address %></p>
                </div>
                <div class="score-div">
                  <a class="score">3.2/5</a>
                </div>
                <footer>
                </footer>
              </div>
            </div>
            <div>
            <hr>
            <p>
              <%= review.post_content %>
            </p>
            <!-- Comment box -->
            <div class="like-comment">
              <ul class="nav-icons">
                <li>
                  <a href="#" class="custom-icon love"><i class="ion-android-favorite-outline"></i>
                    <div>
                      <% @likes.each do |like| %>
                        <% if like[0] == review.id %>
                          <%= like[1] %>
                        <% end %>
                      <% end %>
                    </div>
                  </a>
                </li>
                <li>
                  <a href="#" class="custom-icon dislike"><i class="far fa-thumbs-down"></i>
                    <div>
                      <% @dislikes.each do |dislike| %>
                        <% if dislike[0] == review.id %>
                          <%= dislike[1] %>
                        <% end %>
                      <% end %>
                    </div>
                  </a>
                </li>
              </ul>
            </div>

            <div class="pb-cmnt-container">
              <div class="panel panel-info">
                  <div class="panel-body">
                      <textarea placeholder="Write your comment here!" class="pb-cmnt-textarea"></textarea>
                  </div>
              </div>
            </div>
            </article>
          <% end %>
        </div>
        <div class="pagination" style="width: 100%; text-align: center; font-size: 15px">
          <%= will_paginate @users %>
        </div>
      </div>
      <div class="col-xs-6 col-md-2 sidebar" id="sidebar"></div>
  </div>
</section>

