					<div class="col-md-8">
						<ol class="breadcrumb">
						  <li><a href="#">Home</a></li>
						  <li class="active">Film</li>
						</ol>
						<article class="article main-article">
							<header>
								<h1><%= @review.title %></h1>
								<ul class="details">
									<li>Posted on <%= @review.created_at %></li>
									<!-- <li><a>Film</a></li> -->
									<li>By <%= @review.user.name %></li>
								</ul>
							</header>
							<div class="main">
								<p><%= @review.store_name %></p>
                				<p>Địa chỉ: <%= @review.store_address %></p>
								<p><%= @review.post_content %></p>
							</div>
							
						</article>
						<div class="sharing">
						<div class="title"><i class="ion-android-share-alt"></i> Sharing is caring</div>
							<ul class="social">
								<li>
									<a href="#" class="facebook">
										<i class="ion-social-facebook"></i> Facebook
									</a>
								</li>
								<li>
									<a href="#" class="twitter">
										<i class="ion-social-twitter"></i> Twitter
									</a>
								</li>
